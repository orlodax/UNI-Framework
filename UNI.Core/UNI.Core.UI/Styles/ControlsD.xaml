<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BaseTextBox" TargetType="TextBox">
        <Setter Property="FontFamily" Value="Malgun"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontFamily="Malgun"></TextBlock>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="BaseComboBox" TargetType="ComboBox">
        <Setter Property="FontFamily" Value="Malgun"/>
        <Setter Property="Width" Value="300"/>
    </Style>


    <Style x:Key="BaseTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Malgun"/>
    </Style>

    <Style x:Key="BaseDatePicker" TargetType="DatePicker">
        <Setter Property="FontFamily" Value="Malgun"/>
    </Style>

    <Style x:Key="BaseCalendarDatePicker" TargetType="CalendarDatePicker">
        <Setter Property="FontFamily" Value="Malgun"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="SearchIcon" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="Text" Value="&#xE721;"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>
    
</ResourceDictionary>
