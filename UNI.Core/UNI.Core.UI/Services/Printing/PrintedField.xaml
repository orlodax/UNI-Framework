<UserControl
    x:Class="UNI.Core.UI.Services.Printing.PrintedField"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UNI.Core.UI.Services.Printing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Margin="0,7,0,8"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Horizontal" Height="17">
        <TextBlock d:Text="label"
                   Name="fieldlabel"
                   Text="{x:Bind FieldName}"
                   FontSize="12"
                   FontWeight="SemiBold"
                   VerticalAlignment="Bottom"/>
        <TextBlock Text=":"
                   FontWeight="SemiBold"
                   FontSize="12"
                   Margin="-1,0,2,0"
                   VerticalAlignment="Bottom"/>
        <TextBlock d:Text="Value"
                   Name="fieldValue"
                   Text="{x:Bind FieldValue}"
                   FontSize="12"
                   VerticalAlignment="Bottom"/>
    </StackPanel>
</UserControl>
